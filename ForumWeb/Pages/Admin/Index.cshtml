<form method="post">
    <label for="RoleName">Ny roll</label>
    <input asp-for="RoleName" />
    <input type="submit" value="Skapa ny roll" />
</form>
<hr />
<div>
    Befintliga Användare: <br />
    <table>
        <tr>
            <th>Användarnamn</th>
            @foreach (var role in Model.Roles)
            {
                <th>@role.Name</th>
            }
        </tr>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.UserName</td>

                @foreach (var role in Model.Roles)
                {
                    if (await Model._userManager.IsInRoleAsync(user, role.Name))
                    {
                        <td><a href="?RemoveUserId=@user.Id&Role=@role.Name" class="bg-success text-white">YES</a></td>
                    }
                    else
                    {
                        <td><a href="?AddUserId=@user.Id&Role=@role.Name" class="bg-danger text-white">NO</a></td>
                    }
                }
            </tr>
        }
    </table>
</div>
<hr />
<form method="post">
    <label asp-for="NewOrChangedCategory.CategoryName">Ny kategori</label>
    <input asp-for="NewOrChangedCategory.CategoryName" />
    <input type="submit" value="Skapa ny kategori" />
</form>
<hr />
<div>
    <strong>Befintliga Kategorier:</strong> <br /> <br />

    @foreach (var category in Model.Categories)
    {
        <p>@category.CategoryName</p>
        <a href="?DeleteCategoryId=@category.Id">Delete</a>
    }
</div>
